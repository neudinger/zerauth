CompileFlags:
  # Treat code as C++, use C++23 standard, enable more warnings.
  # Remove: -f*
  Remove: [-fmodule-mapper=*, -fdeps-format=*, -fmodules-ts]
  Add:
    [
      -xc++,
      -stdlib=libstdc++,
      -std=c++latest,
      -std=c++2b,
      -std=c++23,
      -Wall,
      -Wno-deprecated-declarations,
      -I/usr/include/c++/13,
      -I/usr/include/c++/14,
      -D__cpp_concepts=202002L,
    ]
# Remove extra warnings specified in compile commands.
# Single value is also acceptable, same as "Remove: [-mabi]"
# Remove: -mabi
Diagnostics:
  # Tweak Clang-Tidy checks.
  ClangTidy:
    Add:
      [
        performance*,
        modernize*,
        readability*,
        concurrency*,
        clang-analyzer*,
        hicpp*,
        cert*,
        google*,
        clang-diagnostic*,
        bugprone*,
        portability*,
        cppcoreguidelines*,
      ]
    Remove: [readability-function-cognitive-complexity]
    CheckOptions:
      # https://clang.llvm.org/extra/clang-tidy/checks/list.html
      # https://clang.llvm.org/extra/clang-tidy/checks/readability/identifier-naming.html
      readability-identifier-naming.VariableCase: lower_case
